/***********/
/* wloop.c */
/*******************************************************/
/* uses while loop to print numbers with running total */
/*******************************************************/
#include <stdio.h>

main() {
  int count=0;
  int total=0;

  while(count < 10 ) {
    total+=count;
    printf("count=%d, total=%d\n",count++,total);
  }
}
